@{
    ViewBag.Title = "Signup";
}

<div class="mt-4 mb-5 row justify-content-center">
    <form class="col-sm-3">
        <div class="text-center mb-4">
            <img class="mb-4" src="~/Content/Images/foodLogo.png" alt="" width="72" height="72">
            <div class="border-bottom">
                <h1 class="h3 mb-3 font-weight-normal"><i class="fa fa-address-card"></i> &nbsp; Sign Up UI</h1>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-user-circle-o"></i></span>
                </div>
                <input type="text" class="form-control" id="username" placeholder="Username" required>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" required>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input type="password" class="form-control" id="inputPassword" placeholder="Confirm password" required>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="Email address" required autofocus>
            </div>
        </div>

        <button class="btn btn-primary btn-block" type="submit">Sign Up</button>

        <p class="text-muted text-center mt-3">Have an account? Sign In</p>

        <p class="text-muted text-center mb-3">or you can sign in with</p>
        <div class="row text-center">
            <div class="col-md-3">
                <i class="fa fa-google fa-2x"></i>
            </div>
            <div class="col-md-3">
                <i class="fa fa-github fa-2x"></i>
            </div>
            <div class="col-md-3">
                <i class="fa fa-linkedin fa-2x"></i>
            </div>
            <div class="col-md-3">
                <i class="fa fa-facebook-official fa-2x"></i>
            </div>
        </div>

    </form>
</div>

